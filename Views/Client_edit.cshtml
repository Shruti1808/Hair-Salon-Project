@{
  Layout="Shared/_Layout.cshtml";
}
<h3>Edit a client: @Model["client"].GetName()</h3>

<form action='/stylists/@Model["stylist"].GetId()/clients/edit' method='post'>
  <input type="hidden" name="_method" value="PATCH">
  
  <input value='@Model["client"].GetId()' name='clientEditId' type='hidden'>
  <label for="newName">New Client Name:</label>
  <input name="newName" required>

  <button type="submit" class="btn btn-primary">Edit client!</button>
</form>

<a href="/">Return home</a>
