@{
  Layout="Shared/_Layout.cshtml";
}

<h2>All Stylist</h2>

@if (@Model.Count == 0)
{
  <p>There are no stylists.</p>
}

<ul>
  @foreach (var stylist in Model)
  {
    <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a> | <a href="/stylists/edit/@stylist.GetId()">Edit</a> | <a href="/stylist/delete/@stylist.GetId()">Delete</a></li>
  }
</ul>

<a href="/stylists/new">Add new Stylist</a>

<p><a href="/">Return home</a></p>
